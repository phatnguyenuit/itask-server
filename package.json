{
  "name": "itask-server",
  "version": "1.0.0",
  "description": "iTask GraphQL Server.",
  "main": "dist/server.bundle.js",
  "keywords": [],
  "author": "PhatNguyen <phatnt.uit@gmail.com> (https://phatnguyenuit.github.io)",
  "license": "MIT",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "yarn codegen --watch src/schema/**/*.typeDefs.gql",
    "codegen:response-validator": "ts-node generateValidators.ts",
    "dev:server": "yarn dev:build && npm-run-all --parallel dev:nodemon dev:watch &",
    "dev:build": "cross-env NODE_ENV=development yarn build",
    "dev:nodemon": "nodemon dist/server.bundle.js",
    "transpile": "webpack --config webpack.config.js",
    "dev:watch": "cross-env NODE_ENV=development yarn transpile --watch",
    "build": "cross-env NODE_ENV=production npm-run-all --parallel codegen transpile",
    "commit": "git-cz",
    "lint:fix": "yarn lint --fix",
    "lint": "eslint src/**/*.{ts,tsx}",
    "release": "release-it",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ajv": "6.12.0",
    "apollo-datasource-rest": "^3.4.0",
    "apollo-server": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "15.7.2",
    "lorem-ipsum": "^2.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-resolvers": "2.4.2",
    "@graphql-tools/schema": "^8.3.1",
    "@types/express": "^4.17.13",
    "@types/folder-hash": "^4.0.1",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "folder-hash": "^4.0.1",
    "graphql-tag": "^2.12.6",
    "husky": "4.2.5",
    "lint-staged": "^12.1.2",
    "minimatch": "^3.0.4",
    "mws": "^2.0.8",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "release-it": "^14.11.8",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.2",
    "typescript-json-validator": "2.4.2",
    "webpack": "^5.64.2",
    "webpack-cli": "^4.9.1",
    "webpack-graphql-loader": "^1.0.2",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint:fix"
    ],
    "{*.{json,md}}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn type-check && lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
