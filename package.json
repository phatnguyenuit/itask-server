{
  "name": "itask-server",
  "version": "0.0.1",
  "description": "iTask GraphQL Server.",
  "main": "dist/server.bundle.js",
  "keywords": [],
  "author": "PhatNguyen <phatnt.uit@gmail.com> (https://phatnguyenuit.github.io)",
  "license": "MIT",
  "engines": {
    "node": "^12.22.7",
    "npm": "^6.14.15"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all transpile:seed transpile",
    "codegen:gql": "graphql-codegen --config codegen.yml",
    "codegen:validators": "ts-node generateValidators.ts",
    "codegen": "npm-run-all codegen:gql codegen:validators",
    "commit": "git-cz",
    "dev:build": "cross-env NODE_ENV=development npm run transpile",
    "dev:nodemon": "nodemon dist/server.bundle.js",
    "dev:server": "npm run dev:build && npm-run-all prisma:generate --parallel dev:nodemon dev:watch",
    "dev:watch": "cross-env NODE_ENV=development npm run transpile -- --watch",
    "lint:fix": "npm run lint --fix",
    "lint": "eslint src/**/*.ts prisma/**/*.ts",
    "prebuild": "npm-run-all prisma:generate codegen",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:seed": "prisma db seed",
    "release": "release-it",
    "start:pm2": "pm2 start dist/server.bundle.js --name iTask",
    "start": "node dist/server.bundle.js",
    "transpile:seed": "tsc prisma/seeds.ts",
    "transpile": "webpack --config webpack.config.js",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "3.6.0",
    "ajv": "6.12.0",
    "apollo-datasource-rest": "^3.4.0",
    "apollo-server": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-spawn": "^7.0.3",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "graphql": "15.7.2",
    "jsonwebtoken": "^8.5.1",
    "lorem-ipsum": "^2.0.4",
    "prisma": "3.6.0",
    "ts-node": "^10.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/schema-ast": "^2.4.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-resolvers": "2.4.2",
    "@graphql-tools/schema": "^8.3.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/folder-hash": "^4.0.1",
    "@types/jest": "^27.0.3",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.11.11",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "babel-jest": "^27.4.5",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "folder-hash": "^4.0.1",
    "graphql-tag": "^2.12.6",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "minimatch": "^3.0.4",
    "mws": "^2.0.8",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.2",
    "prettier": "^2.5.0",
    "release-it": "^14.11.8",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.2",
    "typescript-json-validator": "2.4.2",
    "webpack": "^5.64.2",
    "webpack-cli": "^4.9.1",
    "webpack-graphql-loader": "^1.0.2",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "npm run lint:fix"
    ],
    "{*.{json,md}}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prisma": {
    "seed": "node prisma/seeds.js"
  }
}
