{
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "eslint.validate": ["typescript"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "files.eol": "\n",
  "cSpell.words": ["ITASK"]
}
